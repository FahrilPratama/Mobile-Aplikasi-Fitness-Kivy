<FriendsListScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#6ebab9")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#6ebab9")
            Rectangle:
                size: self.size
                pos: self.pos
        ScrollView:
            size_hint: 1, 0.9
            pos_hint: {"top": 1, "left": 1}
            GridLayout:
                cols: 1
                id: friends_list_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
                spacing: 5,5
                #padding: 0, 5
        ImageButton:
            source:"icons/back.png"
            size_hint: .15, .15
            pos_hint: {"top": .2, "right": .92}
            on_release:
                app.change_screen("home_screen", "slide")