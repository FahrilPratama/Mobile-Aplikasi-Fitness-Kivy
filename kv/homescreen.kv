#:import utils kivy.utils

<HomeScreen>
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#6ebab9")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#6ebab9")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            pos_hint:{"top":1,"left":1}
            size_hint:1,.1
            id:streak_label
            color:(0,0,0,1)
            markup: True
        ScrollView:
            pos_hint:{"top": 0.9,"left":1}
            size_hint:1,.72
            GridLayout:
                id:banner_grid
                cols:1
                spacing: 10, 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
        GridLayout:
            rows:1
            pos_hint:{"top":.16,"left":1}
            size_hint:1,.15
            ImageButton:
                source: "icons/add.png"
                on_release:
                    app.change_screen("add_workout_screen", "card")
            ImageButton:
                source: "icons/friends_list.png"
                on_release:
                    app.change_screen("friends_list_screen", "slide")
            ImageButton:
                source: "icons/settings.png"
                on_release:
                    app.change_screen("settings_screen", "slide")