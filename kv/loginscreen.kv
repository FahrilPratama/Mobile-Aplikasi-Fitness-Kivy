<LoginScreen>
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#6ebab9")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#6ebab9")
            Rectangle:
                size: self.size
                pos: self.pos
        TextInput:
            id:login_email
            background_color: utils.get_color_from_hex("#285251")
            foreground_color : (1,1,1,1)
            hint_text:"Masukkan Email Anda"
            size_hint: .8, .1
            pos_hint:{"top": .95, "right": .9}
            text_size: self.size
            valign: 'middle'
        TextInput:
            id:login_password
            background_color: utils.get_color_from_hex("#285251")
            foreground_color : (1,1,1,1)
            password: True
            hint_text:"Masukkan Password Anda"
            size_hint: .8, .1
            pos_hint:{"top": .84, "right": .9}
            text_size: self.size
            valign: 'middle'
        LabelButton:
            text:"[u]Daftarkan Akun Anda![/u]"
            markup: True
            size_hint: .8, .1
            pos_hint:{"top": .3, "right": .9}
            on_release:
                app.change_screen("register_screen", "wipe")
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#138520") if self.state == 'normal' else utils.get_color_from_hex("#0f4d16")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15]
            text:"[b]MASUK[/b]"
            markup: True
            size_hint: .8, .1
            pos_hint:{"top": .2, "right": .9}
            on_release:
                app.my_firebase.sign_in(login_email.text, login_password.text)
